<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	
	<package name="app" namespace="/app" extends="thinking_default" >
        <action name="list" class="userAction" method="list">
            <result>/pages/app/listUser.jsp</result>
            <interceptor-ref name="basicStack"/>
        </action>
        <action name="edit-*" class="userAction" method="edit">
			<param name="userId">{1}</param>
            <result>/pages/app/editUser.jsp</result>
        </action>
        <action name="save" class="userAction" method="save">
            <result name="input">/pages/app/editUser.jsp</result>
            <result type="redirect">edit-${user.id}.action</result>
        </action>
    </package>
</struts>
