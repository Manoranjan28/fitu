<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	
	<package name="test" namespace="/test" extends="thinking_default" >
        <default-interceptor-ref name="crudStack"/>

        <action name="list" class="testAction" method="list">
            <result>/pages/test/listTest.jsp</result>
            <interceptor-ref name="basicStack"/>
        </action>
        <action name="edit-*" class="testAction">
			<param name="empId">{1}</param>
            <result>/pages/test/editTest.jsp</result>
            <interceptor-ref name="crudStack"><param name="validation.excludeMethods">execute</param></interceptor-ref>
        </action>
        <action name="save" class="testAction" method="save">
            <result name="input">/pages/test/editTest.jsp</result>
            <result type="redirect">edit-${test.id}.action</result>
        </action>
        <action name="delete" class="testAction" method="delete">
            <result name="error">/pages/test/editTest.jsp</result>
            <result type="redirect">edit-${test.id}.action</result>
        </action>
    </package>
</struts>
