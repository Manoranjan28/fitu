<?xml version="1.0" encoding="UTF-8"?>
<search-config>
	<!-- App Start -->
	<search name="user" class="org.commonfarm.app.model.User" url="app/listUser.action">
		<item name="userId" type="string" mode="like" />
		<item name="name"   type="string" mode="like"/>
	</search>
	<search name="role" class="org.commonfarm.app.model.Role" url="app/listRole.action">
		<item name="name" type="string" mode="like" />
	</search>
	<search name="userGroup" class="org.commonfarm.app.model.UserGroup" url="app/listUserGroup.action">
		<item name="name" type="string" mode="like" />
	</search>
	<!-- App End -->
	<!-- Community Start -->
	<search name="space" class="org.commonfarm.community.model.Space" url="listSpace.fitu">
		<item name="name" type="string" mode="like" />
		<item name="type" type="string" mode="like"/>
	</search>
	<search name="topic" class="org.commonfarm.community.model.Topic" url="listTopic.fitu">
		<item name="name" type="string" mode="like" />
	</search>
	<search name="specialTopic" class="org.commonfarm.community.model.SpecialTopic" url="listSpecialTopic.fitu">
		<item name="name" type="string" mode="like" />
	</search>
	<search name="article" class="org.commonfarm.community.model.Article" url="listArticle.fitu">
		<item name="title"   type="string" mode="like" />
		<item name="summary" type="string" mode="like" />
		<item name="level"   type="string" mode="eq" />
		<item name="topic$name" type="string" mode="like" />
		<item name="goodFlg" type="string" mode="eq" />
	</search>
	<!-- App End -->
</search-config>